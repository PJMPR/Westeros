@using Microsoft.AspNetCore.Routing
@model Westeros.Ranking.Web.Models.AddOcenaClass

@{
    ViewData["Title"] = "AddOcena";
}
<style>
    body {
        padding-top: 0px;
    }

    .navbar {
        display: none;
    }
    footer {
        display: none;
    }
</style>

<h2>AddOcena</h2>

<h4>Oceny</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOcena" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nick" class="control-label"></label>
                <input asp-for="Nick" class="form-control" />
                <span asp-validation-for="Nick" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tekst" class="control-label"></label>
                <input asp-for="Tekst" class="form-control" />
                <span asp-validation-for="Tekst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ocena" class="control-label"></label>
                <input asp-for="Ocena" value="1" class="form-control" />
                <span asp-validation-for="Ocena" class="text-danger"></span>
            </div>
            <input asp-for="UrlElements" type="hidden" value="@(Url.ActionContext.HttpContext.Request.QueryString.HasValue ? @Url.ActionContext.HttpContext.Request.QueryString.Value : "?")" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
